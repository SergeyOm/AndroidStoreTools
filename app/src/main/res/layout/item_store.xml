<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card:cardCornerRadius="2dp"
    card:cardBackgroundColor="@color/colorAccent"
    card:cardElevation="3dp"
    card:cardUseCompatPadding="true"
    android:id="@+id/cardview_store">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_store"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/address_store"
            android:layout_below="@id/name_store"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phone_store"
            android:layout_below="@id/address_store"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>